  <!-- Scripts -->
  <script>
    function updateTotal() {
      let total = 0;
      document.querySelectorAll('.package:checked').forEach(function(checkbox) {
        total += parseFloat(checkbox.value);
      });
      document.getElementById('totalPrice').textContent = `R$${total.toFixed(2)}`;
    }

    function copyPix() {
      const pixKey = document.getElementById("pixKey").textContent;
      navigator.clipboard.writeText(pixKey);
      alert("Chave Pix copiada!");
    }

    function goToPayment() {
      document.querySelector('main').style.display = 'none';
      document.getElementById('paymentScreen').style.display = 'block';
    }

    function goBackToMenu() {
      document.querySelector('main').style.display = 'block';
      document.getElementById('paymentScreen').style.display = 'none';
    }

    document.getElementById('pix').addEventListener('click', function () {
      document.getElementById('paymentMethod').classList.remove('hidden');
      document.getElementById('selectedPayment').textContent = "Pix";
      document.getElementById('pixDetails').classList.remove('hidden');
      document.getElementById('qrCodeDetails').classList.add('hidden');
    });

    document.getElementById('qrCode').addEventListener('click', function () {
      document.getElementById('paymentMethod').classList.remove('hidden');
      document.getElementById('selectedPayment').textContent = "QR Code";
      document.getElementById('qrCodeDetails').classList.remove('hidden');
      document.getElementById('pixDetails').classList.add('hidden');
    });

    function selectStar(starNumber) {
      let stars = document.querySelectorAll('.estrela');
      for (let i = 0; i < stars.length; i++) {
        if (i < starNumber) {
          stars[i].classList.add('selected');
        } else {
          stars[i].classList.remove('selected');
        }
      }
    }

    function submitComment() {
      document.getElementById('commentFeedback').classList.remove('hidden');
      setTimeout(() => {
        document.getElementById('commentFeedback').classList.add('hidden');
      }, 3000);
    }

    // Contador Regressivo
    let countdownTime = 600; // 10 minutos em segundos
    const countdownElement = document.getElementById('countdown');
    setInterval(function () {
      if (countdownTime > 0) {
        countdownTime--;
        let minutes = Math.floor(countdownTime / 60);
        let seconds = countdownTime % 60;
        countdownElement.textContent = `${minutes}:${seconds < 10 ? '0' + seconds : seconds}`;
      }
    }, 1000);
  </script>
